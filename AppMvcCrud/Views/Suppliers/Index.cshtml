@model IEnumerable<AppMvcCrud.Models.Supplier>

@{
    ViewData["Title"]= "List of Suppliers";
}

<h1> @ViewData["Title"]</h1>

<p>
    <a class="btn btn-info" asp-action="Create">New supplier</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Document)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="text-right">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit<spam class="fa fa-search"></spam> </a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details<spam class="fa fa-pencil-alt"></spam> </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete<spam class="fa fa-trash"></spam> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
